<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="PapayaTheme"
           parent="@android:style/Theme.Holo.Light">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid</item>
        <item name="android:actionBarWidgetTheme">@style/ActionBar.Widget</item>
    </style>

    <style name="ActionBar.Solid"
           parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@color/primary_green_400</item>
        <item name="android:titleTextStyle">@style/ActionBar.TitleTextStyle</item>
    </style>

    <style name="ActionBar.TitleTextStyle"
           parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ActionBar.Widget"
           parent="@android:style/Theme.Holo.Light">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
    </style>

</resources>